{
  "name": "SVG Gobbler",
  "short_name": "SVG Gobbler",
  "version": "1.18",
  "manifest_version": 2,
  "author": "Ross Moody",
  "description": "Download SVGs from the web.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "default-src 'self'",
  "icons": {
    "16": "./img/icon16.png",
    "48": "./img/icon48.png",
    "128": "./img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "./img/icon16.png",
      "24": "./img/icon24.png",
      "32": "./img/icon32.png"
    }
  },
  "permissions": ["activeTab"]
}
